<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TextToImageCrypto.Views.PasswordDialogWindow"
        Title="Ввод пароля"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner">
        <StackPanel Margin="15" Spacing="10">
                <TextBlock x:Name="MessageText" Text="Введите пароль:"/>
                <TextBox x:Name="PasswordBox" PasswordChar="*"/>
                <Button Content="OK" Click="OnOkClick" HorizontalAlignment="Right" Width="80"/>
        </StackPanel>
</Window>
